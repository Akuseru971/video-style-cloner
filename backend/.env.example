# Database
DATABASE_URL="postgresql://user:password@localhost:5432/video_style_cloner"

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# API Server
PORT=3000
NODE_ENV=development

# Creatomate
CREATOMATE_API_KEY=your_creatomate_api_key_here

# Google Cloud (Video Intelligence + Storage)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
